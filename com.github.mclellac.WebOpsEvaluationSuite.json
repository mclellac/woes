{
    "app-id": "com.github.mclellac.WebOpsEvaluationSuite",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "woes",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--install=/app/share/metainfo/com.github.mclellac.WebOpsEvaluationSuite.metainfo.xml",
        "--filesystem=xdg-config",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.freedesktop.FileManager1",
        "--env=PIP_INDEX_URL=https://pypi.org/simple",
        "--filesystem=home",
        "--device=all",
        "--socket=pulseaudio",
        "--socket=system-bus"
    ],
    "cleanup": [
        "*.pyc",
        "*.pyo",
        "*.so",
        "__pycache__"
    ],
    "modules": [
        {
            "name": "python3-requests",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app git+https://github.com/psf/requests.git"
            ],
            "build-options": {
                "build-args": [
                    "--share=network"
                ],
                "env": {
                    "FLATPAK_BUILD": "1"
                }
            }
        },
        {
            "name": "woes",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mclellac/woes.git",
                    "branch": "main"
                }
            ],
            "build-options": {
                "build-args": [
                    "--share=network"
                ],
                "env": {
                    "FLATPAK_BUILD": "1"
                }
            }
        }
    ]
}
