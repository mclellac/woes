{
    "app-id": "com.github.mclellac.WebOpsEvaluationSuite",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "woes",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-config",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.freedesktop.FileManager1",
        "--env=PIP_INDEX_URL=https://pypi.org/simple",
        "--filesystem=home",
        "--device=all",
        "--socket=pulseaudio",
        "--socket=system-bus"
    ],
    "cleanup": [
        "*.pyc",
        "*.pyo",
        "*.so",
        "__pycache__"
    ],
    "modules": [
        {
            "name": "python3-nmap",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-cache-dir --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/0f/77/ba47aafa6361a5b59224562612ac3e3c3741808048e587afe662ae448571/python3-nmap-1.6.0.tar.gz",
                    "sha256": "892b5091cde429fabfb8ba63382b2db8fd795193ba147558d0a7d5534c956255"
                }
            ],
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            }
        },
        {
            "name": "python3-requests",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-cache-dir --prefix=/app git+https://github.com/psf/requests.git"
            ],
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            }
        },
        {
            "name": "nmap",
            "buildsystem": "simple",
            "build-commands": [
                "./configure --prefix=/app --without-zenmap --without-ndiff --without-nping --without-ncat",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nmap.org/dist/nmap-7.95.tar.bz2",
                    "sha256": "e14ab530e47b5afd88f1c8a2bac7f89cd8fe6b478e22d255c5b9bddb7a1c5778"
                }
            ]
        },
        {
            "name": "woes",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mclellac/woes.git",
                    "branch": "main"
                }
            ],
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            }
        }
    ]
}
